@model List<Producto>

<h1>Productos</h1>

<p><a asp-action="Create">Crear Nuevo Producto</a></p>

<table class="table">
    <thead>
        <tr>
            <th>ID de Producto</th>
            <th>Nombre de Producto</th>
            <th>Descripcion de Producto</th>
            <th>Precio de Producto</th>
            <th>Categoria del Producto</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var Productos in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => Productos.ProductoId)</td>
                <td>@Html.DisplayFor(m => Productos.ProductoNombre)</td>
                <td>@Html.DisplayFor(m => Productos.ProductoDescripcion)</td>
                <td>@Html.DisplayFor(m => Productos.ProductoPrecio)</td>
                <td>@Html.DisplayFor(m => Productos.Categoria.CategoriaNombre)</td>
            </tr>
        }
    </tbody>
</table>